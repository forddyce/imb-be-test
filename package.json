{
    "name": "fcm-notification-service",
    "version": "1.0.0",
    "description": "Firebase Cloud Messaging notification service with RabbitMQ integration",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
        "docker:build": "docker build -t fcm-notification-service .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "keywords": [
        "fcm",
        "firebase",
        "rabbitmq",
        "notifications"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^5.2.1",
        "dotenv": "^17.2.3",
        "firebase-admin": "^13.6.0",
        "amqplib": "^0.10.9",
        "mysql2": "^3.16.0",
        "winston": "^3.19.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.6",
        "@types/amqplib": "0.10.6",
        "@types/cors": "^2.8.19",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3",
        "ts-node-dev": "^2.0.0",
        "jest": "^30.2.0",
        "@types/jest": "^30.0.0"
    }
}
